{
  "name": "p-chan-api",
  "version": "1.0.0",
  "description": "An API Server of P-Chan",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node .",
    "build": "npm-run-all clean build:*",
    "build:src": "tsc",
    "build:docs": "redoc-cli bundle ./docs/api.yaml -o ./public/docs/index.html",
    "clean": "rimraf ./dist",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node -- -r tsconfig-paths/register ./src/index.ts",
    "format": "prettier --write \"./src/**/*.ts\""
  },
  "author": "P-Chan",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dayjs": "^1.8.18",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.16",
    "dotenv": "^8.2.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "redoc-cli": "^0.9.4",
    "rimraf": "^3.0.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.3"
  },
  "engines": {
    "node": "12.x"
  },
  "private": true
}
