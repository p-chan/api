{
  "name": "p-chan-api",
  "version": 2,
  "env": {
    "MYSQL_URL": "@p-chan-api-mysql-url",
    "MONEYFORWARD_EMAIL": "@p-chan-api-moneyforward-email",
    "MONEYFORWARD_PASSWORD": "@p-chan-api-moneyforward-password"
  },
  "build": {
    "env": {
      "MYSQL_URL": "@p-chan-api-mysql-url"
    }
  },
  "builds": [
    { "src": "dist/**/*", "use": "@now/node" },
    { "src": "public/**/*", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/docs",
      "dest": "/public/docs/index.html"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    { "src": "/(.*)", "dest": "/dist/index.js" }
  ]
}
