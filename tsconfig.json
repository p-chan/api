{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@data/*": ["./src/data/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@utilities/*": ["./src/utilities/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
